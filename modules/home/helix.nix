{pkgs, ...}: {

    programs.helix = {
      enable = true;
      settings = {
        theme = "Gruvbox Material Dark Hard";
        editor.cursor-shape = {
          normal = "block";
          insert = "bar";
          select = "underline";
        };
      };
      languages.language = [
        {
          name = "nix";
          auto-format = true;
          formatter.command = (pkgs.lib).getExe pkgs.nixfmt-rfc-style;
        }
      ];
      themes = {
        autumn_night_transparent = {
          "inherits" = "autumn_night";
          "ui.background" = { };
        };
      };
    };

}